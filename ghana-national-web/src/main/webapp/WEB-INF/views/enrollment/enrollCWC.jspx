<div id="body" xmlns:jsp="http://java.sun.com/JSP/Page" xmlns:c="http://java.sun.com/jsp/jstl/core"
     xmlns:form="http://www.springframework.org/tags/form" xmlns:fn="http://java.sun.com/jsp/jstl/functions"
     xmlns:spring="http://www.springframework.org/tags" xmlns:motech="urn:jsptagdir:/WEB-INF/tags/motech">
    <jsp:directive.page contentType="text/html;charset=UTF-8"/>
    <jsp:output omit-xml-declaration="yes"/>

    <script src="${pageContext.servletContext.contextPath}/resources/js/facility-fields.js" type="text/javascript"><!--closing tag needed--></script>
    
    <script src="${pageContext.servletContext.contextPath}/resources/js/enrollCWC.js"
            type="text/javascript"><!-- required for FF3 and Opera --></script>

    <form:form id="cwcEnrollmentForm" action="/admin/enroll/cwc/save" method="POST" title="CWC Enrollment"
               commandName="cwcEnrollmentForm">

        <div>
            <label for="motechPatientId" class="formLabel"><spring:message code="patient_motech_id"/> *:</label>
            <form:input path="patientMotechId" size="20" cssClass="jsRequire" disabled="true"/>
            <form:hidden path="patientMotechId"/>
        </div>

        <jsp:include page="/WEB-INF/views/common/select_facility.jspx"/>

        <div>
            <label for="serialNumber" class="formLabel"><spring:message code="patient_serial_number"/> *:</label>
            <form:input path="serialNumber" size="20" cssClass="jsRequire" disabled="true"/>
            <form:hidden path="serialNumber"/>
        </div>

        <div id="dateOfBirthHolder" class="form-field">
            <label class="formLabel" for="registrationDate"><spring:message code="registration_date"/> *:</label>
            <form:input readonly="true" path="registrationDate" cssClass="jsRequire jsDate jsBefore" size="20"
                        label="${fn:escapeXml(registration_date)}"/>
            <span id='registrationDate' class='alertText formlyInvalid formlyAlert hide'>
                ${fn:escapeXml(registration_date)} ${fn:escapeXml(required_msg)}
            </span>
            <span id='dateOfBirthDateError' class='alertText formlyInvalid formlyAlert hide'>
                ${fn:escapeXml(registration_date)} ${fn:escapeXml(incorrect_msg)}
            </span>
        </div>
        <input type="button" id="submit" value="Submit"/>
    </form:form>
</div>
